<!DOCTYPE html>
<html>
<head>
  <title>Time Capital Group, Inc.</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<meta http-equiv="Content-type" content="text/rhtml; charset=utf8" />
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
          <% if current_user %>
            <%= link_to('注销', destroy_user_session_path, :method => :delete, :class => "navbar-brand hidden-sm") %>
          <% else %>
            <%= link_to('注册', new_registration_path(:user), :class => "navbar-brand hidden-sm") %>
          <% end %>
    </div>
    <div class="navbar-collapse collapse" role="navigation">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <% if current_user %>
              <%= link_to('密码', edit_registration_path(:user), :class => "navbar-brand hidden-sm") %>
          <% else %>
              <%= link_to('登录', new_session_path(:user), :class => "navbar-brand hidden-sm") %>
          <% end %>
        </li>
        <li class="dropdown">
          <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">模型文档<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li>
              <a href="#" target="_blank">起步</a>
            </li>
          </ul>
        </li>
        <li><a href="#" target="_blank">投资教程</a></li>
        <li>
          <%= link_to('组合池', sysanalyst_path(tag: 'A')) %>
        </li>
        <li>
          <% if current_user and not(current_user.analyst.nil?) and current_user.has_role? :admin %>
            <%= link_to('分析师', reserves_path(qtype: 'catch')) %>
          <% end %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="#">关于</a></li>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <div class="row" >
    <div class="col-xs-8 col-md-offset-2">
      <%if flash[:notice]%>
      <div class="alert alert-success" role="alert">
        <%= flash[:notice] %> 
      </div>
      <%end%>
      <%if flash[:alert]%>
      <div class="alert alert-info" role="alert">
        <%= flash[:alert] %> 
      </div>
      <%end%>

      <%= yield %>

    </div>
  </div>
</div>

<footer class="footer ">
  <div class="container">
    <div class="row footer-top">
      <div class="col-sm-6  col-lg-5 col-lg-offset-1">
        <div class="row about">
          <div class="col-xs-3">
            <h4>关于</h4>
            <ul class="list-unstyled">
              <li><a href="#"></a></li>
            </ul>
          </div>
          <div class="col-xs-3">
            <h4>联系方式</h4>
            <ul class="list-unstyled">
              <li><a href="#" title="" target="_blank"></a></li>
            </ul>
          </div>
          <div class="col-xs-3">
            <h4>旗下网站</h4>
            <ul class="list-unstyled">
              <li><a href="#" target="_blank"></a></li>
            </ul>
          </div>
          <div class="col-xs-3">
            <h4>赞助商</h4>
            <ul class="list-unstyled">
              <li><a href="#" target="_blank"></a></li>
            </ul>
          </div>
        </div>

      </div>
    </div>
    <hr>
    <div class="row footer-bottom">
      <ul class="list-inline text-center">
        <li><a href="#" target="_blank"></a></li><li></li>
      </ul>
    </div>
  </div>
</footer>
</body>
</html>
