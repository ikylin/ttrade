<%- model_class = Imgdepot -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:titile) %>:</strong></dt>
  <dd><%= @imgdepot.titile %></dd>
  <dt><strong><%= model_class.human_attribute_name(:summary) %>:</strong></dt>
  <dd><%= @imgdepot.summary %></dd>
  <dt></dt>
  <dd><%= image_tag @imgdepot.imgfile.url(:thumb) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:imgfile_file_name) %>:</strong></dt>
  <dd><%= @imgdepot.imgfile_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:imgfile_content_type) %>:</strong></dt>
  <dd><%= @imgdepot.imgfile_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:imgfile_file_size) %>:</strong></dt>
  <dd><%= @imgdepot.imgfile_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:imgfile_updated_at) %>:</strong></dt>
  <dd><%= @imgdepot.imgfile_updated_at %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              imgdepots_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_imgdepot_path(@imgdepot), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              imgdepot_path(@imgdepot),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_imgdepot_path,
            :class => 'btn btn-primary' %>
