<%- model_class = Indexfilter -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @indexfilter.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:script) %>:</strong></dt>
  <dd><%= @indexfilter.script %></dd>
  <dt><strong><%= model_class.human_attribute_name(:platform) %>:</strong></dt>
  <dd><%= @indexfilter.platform %></dd>
  <dt><strong><%= model_class.human_attribute_name(:samplecount) %>:</strong></dt>
  <dd><%= @indexfilter.samplecount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wincount) %>:</strong></dt>
  <dd><%= @indexfilter.wincount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:losscount) %>:</strong></dt>
  <dd><%= @indexfilter.losscount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marketdatecount) %>:</strong></dt>
  <dd><%= @indexfilter.marketdatecount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:summary) %>:</strong></dt>
  <dd><%= @indexfilter.summary %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              indexfilters_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_indexfilter_path(@indexfilter), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              indexfilter_path(@indexfilter),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
