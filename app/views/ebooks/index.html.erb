<%- model_class = Ebook -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ebook_path,
            :class => 'btn btn-primary' %>

<ul class="pagination">
  <%= will_paginate @ebooks %>
</ul>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:wwwlink) %></th>
      <th><%= model_class.human_attribute_name(:summary) %></th>
      <th><%= model_class.human_attribute_name(:frontcover) %></th>
      <th><%= model_class.human_attribute_name(:frontcover_content_type) %></th>
      <th><%= model_class.human_attribute_name(:frontcover_file_size) %></th>
      <th><%= model_class.human_attribute_name(:frontcover_updated_at) %></th>
      <th><%= model_class.human_attribute_name(:rate) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ebooks.each do |ebook| %>
      <tr>
        <td><%= link_to ebook.id, ebook_path(ebook) %></td>
        <td><%= ebook.title %></td>
        <td><%= ebook.description %></td>
        <td><%= ebook.wwwlink %></td>
        <td><%= ebook.summary %></td>
        <td><%= image_tag ebook.frontcover.url(:small) %></td>
        <td><%= ebook.frontcover_content_type %></td>
        <td><%= ebook.frontcover_file_size %></td>
        <td><%= ebook.frontcover_updated_at %></td>
        <td><%= ebook.rate %></td>
        <td><%=l ebook.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ebook_path(ebook), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ebook_path(ebook),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<ul class="pagination">
  <%= will_paginate @ebooks %>
</ul>

