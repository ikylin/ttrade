<%= simple_form_for @weixinlog, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :user_id %>
  <%= error_span(@weixinlog[:user_id]) %>
  <%= f.input :openid %>
  <%= error_span(@weixinlog[:openid]) %>
  <%= f.input :optquery %>
  <%= error_span(@weixinlog[:optquery]) %>
  <%= f.input :optreplay %>
  <%= error_span(@weixinlog[:optreplay]) %>
  <%= f.input :opttime %>
  <%= error_span(@weixinlog[:opttime]) %>
  <%= f.input :marketdate %>
  <%= error_span(@weixinlog[:marketdate]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                weixinlogs_path, :class => 'btn btn-default' %>
<% end %>
