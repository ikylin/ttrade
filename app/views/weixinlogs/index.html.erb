<%- model_class = Weixinlog -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<ul class="pagination">
  <%= will_paginate @weixinlogs %>
</ul>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:openid) %></th>
      <th><%= model_class.human_attribute_name(:optquery) %></th>
      <th><%= model_class.human_attribute_name(:optreplay) %></th>
      <th><%= model_class.human_attribute_name(:opttime) %></th>
      <th><%= model_class.human_attribute_name(:marketdate) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @weixinlogs.each do |weixinlog| %>
      <tr>
        <td><%= link_to weixinlog.id, weixinlog_path(weixinlog) %></td>
        <td><%= weixinlog.user_id %></td>
        <td><%= weixinlog.openid %></td>
        <td><%= weixinlog.optquery %></td>
        <td><%= weixinlog.optreplay %></td>
        <td><%= weixinlog.opttime %></td>
        <td><%= weixinlog.marketdate %></td>
        <td><%=l weixinlog.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_weixinlog_path(weixinlog), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      weixinlog_path(weixinlog),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<ul class="pagination">
  <%= will_paginate @weixinlogs %>
</ul>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_weixinlog_path,
            :class => 'btn btn-primary' %>
