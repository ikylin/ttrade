<%- model_class = Everydaytip -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= link_to t('.new_tip', :default => t("helpers.links.new_tip")),
              new_ebook_everydaytip_path(@ebook), :class => 'btn btn-default'  %>

<ul class="pagination">
  <%= will_paginate @everydaytips %>
</ul>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tip) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:action) %></th>
    </tr>
  </thead>
  <tbody>
    <% @everydaytips.each do |everydaytip| %>
      <tr>
        <td><%= link_to everydaytip.id, everydaytip_path(id: everydaytip.id) %></td>
        <td><%= everydaytip.tip %></td>
        <td><%=l everydaytip.created_at %></td>
        <td>

<%= link_to t('.show', :default => t("helpers.links.show")),
              everydaytip_path(id: everydaytip.id), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_everydaytip_path(id: everydaytip.id), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              everydaytip_path(id: everydaytip.id),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<ul class="pagination">
  <%= will_paginate @everydaytips %>
</ul>

